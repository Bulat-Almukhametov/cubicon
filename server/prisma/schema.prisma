// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
    id                   Int    @id @default(autoincrement())
    email                String @unique
    firstName            String
    lastName             String
    organizedContests    Contest[]
    results              Result[]

    @@unique([firstName, lastName])
}

model Contest {
    id            Int      @id @default(autoincrement())
    name          String   @unique
    date          DateTime
    vkUrl         String?
    city          String?
    isPublished   Boolean
    organizedById Int?
    organizedBy   User?    @relation(fields: [organizedById], references: [id])
    rounds        Round[]
}

model Round {
    id        Int       @id @default(autoincrement())
    name      String
    contestId Int
    contest   Contest   @relation(fields: [contestId], references: [id], onDelete: Cascade)
    results   Result[]
    type      RoundType @default(AVERAGE_OF_5)
}

enum RoundType {
    AVERAGE_OF_5
    MEAN_OF_3
}

model Result {
    id            Int    @id @default(autoincrement())
    attempt1      Int
    attempt2      Int
    attempt3      Int
    attempt4      Int
    attempt5      Int
    best          Int
    average       Int
    roundId       Int
    round         Round  @relation(fields: [roundId], references: [id], onDelete: Cascade)
    performedById Int
    performedBy   User   @relation(fields: [performedById], references: [id])
}
