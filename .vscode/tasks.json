{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Client",
            "type": "shell",
            "command": "npm run start",
            "options": {
              "cwd": "${workspaceFolder}/client"
            }
          },
          {
            "label": "Run Server",
            "command": "npm run serve",
            "options": {
              "cwd": "${workspaceFolder}/server"
            }
          },
          {
            "label": "Run Server + Client",
            "dependsOn": ["Run Client", "Run Server"]
          }
    ]
}